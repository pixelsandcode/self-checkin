<RelativeLayout
    android:id="@+id/success_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/success_background"
    tools:ignore="ContentDescription"
    tools:context="me.tipi.self_check_in.ui.fragments.SuccessSignUpFragment">

  <ImageView
      android:id="@+id/tick_image"
      android:layout_width="73dp"
      android:layout_height="73dp"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="40dp"
      android:src="@drawable/ic_tick"/>

  <TextView
      android:id="@+id/title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:fontFamily="@string/roboto_regular"
      android:gravity="center"
      android:textColor="@color/white"
      android:layout_marginTop="@dimen/second_key_line"
      android:textSize="40sp"
      tools:text="Thanks Jack"
      android:layout_below="@+id/tick_image"
      android:layout_centerHorizontal="true"/>

  <TextView
      android:id="@+id/show_code"
      android:layout_width="460dp"
      android:layout_height="wrap_content"
      android:layout_below="@+id/title"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="8dp"
      android:fontFamily="@string/roboto_medium"
      android:gravity="center"
      android:text="@string/go_to_reception"
      android:textColor="@color/white"
      android:textSize="40sp"/>

  <View
      android:id="@+id/divider1"
      android:layout_width="match_parent"
      android:layout_height="2dp"
      android:layout_below="@id/show_code"
      android:layout_marginLeft="120dp"
      android:layout_marginRight="120dp"
      android:layout_marginTop="@dimen/second_key_line"
      android:background="@color/white"/>

  <ImageView
      android:id="@+id/avatars"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/divider1"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="@dimen/second_key_line"
      android:src="@drawable/avatars"/>

  <TextView
      android:id="@+id/download"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/avatars"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="@dimen/second_key_line"
      android:fontFamily="@string/roboto_medium"
      android:gravity="center"
      android:text="@string/download_tipi"
      android:textColor="@color/white"
      android:textSize="40sp"/>

  <TextView
      android:id="@+id/meet_text"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/download"
      android:layout_centerHorizontal="true"
      android:layout_marginRight="130dp"
      android:layout_marginLeft="130dp"
      android:layout_marginTop="20dp"
      android:fontFamily="@string/roboto_regular"
      android:gravity="center"
      android:text="@string/meet"
      android:textColor="#B3ffffff"
      android:textSize="30sp"/>

  <ImageView
      android:id="@+id/store"
      android:layout_width="match_parent"
      android:layout_height="37dp"
      android:layout_below="@+id/meet_text"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="@dimen/second_key_line"
      android:src="@drawable/store_icon"/>

  <View
      android:id="@+id/divider2"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_below="@id/store"
      android:layout_marginLeft="120dp"
      android:layout_marginRight="120dp"
      android:layout_marginTop="@dimen/second_key_line"
      android:background="@color/white"/>


  <me.tipi.self_check_in.ui.misc.CircleCountDownView
      android:id="@+id/circle_count_down_view"
      android:layout_width="80dp"
      android:layout_height="80dp"
      android:layout_above="@+id/continue_btn"
      android:layout_centerHorizontal="true"
      android:layout_gravity="center_horizontal"
      android:layout_marginBottom="50dp"
      android:visibility="visible"/>


  <Button
      android:id="@+id/continue_btn"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_marginBottom="@dimen/second_key_line"
      android:layout_marginLeft="@dimen/proceed_button_margin"
      android:layout_marginRight="@dimen/proceed_button_margin"
      android:background="@drawable/transparent_white_border_button_bg"
      android:padding="@dimen/first_key_line"
      android:text="@string/next_check_in"
      android:textColor="@color/white"
      android:textSize="@dimen/font_normal"
      android:textStyle="bold"/>

  <ImageButton
      android:id="@+id/printer_btn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_alignParentTop="true"
      android:layout_margin="16dp"
      android:background="@drawable/ic_print"
      android:visibility="gone"/>

</RelativeLayout>
