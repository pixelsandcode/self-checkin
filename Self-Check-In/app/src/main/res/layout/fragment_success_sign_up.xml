<RelativeLayout
    android:id="@+id/success_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="me.tipi.self_check_in.ui.fragments.SuccessSignUpFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

  <TextView
      android:id="@+id/title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/printer_btn"
      android:layout_centerHorizontal="true"
      android:layout_marginBottom="50dp"
      android:layout_above="@+id/show_code"
      android:layout_marginLeft="@dimen/second_key_line"
      android:layout_marginRight="@dimen/second_key_line"
      android:gravity="center"
      tools:text="Thanks Jack"
      android:textColor="@color/main_text"
      android:fontFamily="@string/roboto_regular"
      android:textSize="@dimen/font_extra_large"
      />
  
  <TextView
      android:id="@+id/show_code"
      android:layout_width="460dp"
      android:layout_height="wrap_content"
      android:text="@string/go_to_reception"
      android:layout_centerHorizontal="true"
      android:textSize="40sp"
      android:textColor="@color/main_text"
      android:layout_centerInParent="true"
      android:layout_marginBottom="50dp"
      android:gravity="center"
      android:fontFamily="@string/roboto_medium"/>

  <me.tipi.self_check_in.ui.misc.CircleCountDownView
      android:id="@+id/circle_count_down_view"
      android:layout_width="80dp"
      android:layout_height="80dp"
      android:layout_centerHorizontal="true"
      android:layout_above="@+id/continue_btn"
      android:layout_marginBottom="50dp"
      android:layout_gravity="center_horizontal"
      android:visibility="visible"/>


  <Button
      android:id="@+id/continue_btn"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_marginBottom="@dimen/second_key_line"
      android:layout_marginLeft="@dimen/proceed_button_margin"
      android:layout_marginRight="@dimen/proceed_button_margin"
      android:background="@drawable/next_button_bg"
      android:padding="@dimen/first_key_line"
      android:text="@string/next_check_in"
      android:textColor="@color/colorAccent"
      android:textSize="@dimen/font_normal"
      android:textStyle="bold"/>

  <ImageButton
      android:id="@+id/printer_btn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_alignParentTop="true"
      android:layout_margin="16dp"
      android:background="@drawable/ic_print"
      android:visibility="gone"/>

</RelativeLayout>
