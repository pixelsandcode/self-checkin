<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    tools:context="me.tipi.self_check_in.ui.SettingActivity"
    android:background="@drawable/main_bg"
    tools:ignore="RtlHardcoded">

  <android.support.v7.widget.CardView
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="@dimen/main_frame"
      android:layout_height="@dimen/main_frame_height"
      android:layout_gravity="center"
      android:background="?android:attr/selectableItemBackground"
      android:clickable="false"
      tools:context="me.tipi.self_check_in.ui.SettingActivity"
      tools:ignore="RtlHardcoded">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/first_key_line">

      <ImageView
          android:id="@+id/logo"
          android:layout_width="@dimen/logo_size"
          android:layout_height="@dimen/logo_size"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="@dimen/normal_margin"
          android:contentDescription="@string/app_name"
          android:scaleType="fitCenter"
          android:src="@drawable/logo"/>

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/logo"
          android:layout_marginLeft="@dimen/first_key_line"
          android:layout_marginTop="@dimen/third_key_line"
          android:padding="@dimen/normal_padding"
          android:src="@drawable/ic_dashboard"
          />

      <TextView
          android:id="@+id/version"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/logo"
          android:layout_centerHorizontal="true"
          android:layout_marginLeft="@dimen/second_key_line"
          android:layout_marginRight="@dimen/second_key_line"
          android:layout_marginTop="@dimen/third_key_line"
          android:gravity="center"
          android:padding="@dimen/normal_padding"
          android:textColor="@color/main_text"
          android:textSize="@dimen/font_normal"
          tools:text="Version 1.2"/>

      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_below="@+id/version"
          android:layout_marginLeft="@dimen/normal_margin"
          android:layout_marginRight="@dimen/normal_margin"
          android:background="#979797"/>

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/version"
          android:layout_marginLeft="@dimen/first_key_line"
          android:layout_marginTop="@dimen/first_key_line"
          android:padding="@dimen/normal_padding"
          android:src="@drawable/ic_file_download"
          />

      <TextView
          android:id="@+id/download"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/version"
          android:layout_centerHorizontal="true"
          android:layout_marginLeft="@dimen/second_key_line"
          android:layout_marginRight="@dimen/second_key_line"
          android:layout_marginTop="@dimen/first_key_line"
          android:clickable="true"
          android:gravity="center"
          android:onClick="goToDownload"
          android:padding="@dimen/normal_padding"
          android:text="@string/download"
          android:textColor="@color/main_text"
          android:textSize="@dimen/font_normal"/>

      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_below="@+id/download"
          android:layout_marginLeft="@dimen/normal_margin"
          android:layout_marginRight="@dimen/normal_margin"
          android:background="#979797"/>

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/download"
          android:layout_marginLeft="@dimen/first_key_line"
          android:layout_marginTop="@dimen/first_key_line"
          android:padding="@dimen/normal_padding"
          android:src="@drawable/ic_exit_to_app"
          />

      <TextView
          android:id="@+id/logout"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/download"
          android:layout_centerHorizontal="true"
          android:layout_marginLeft="@dimen/second_key_line"
          android:layout_marginRight="@dimen/second_key_line"
          android:layout_marginTop="@dimen/first_key_line"
          android:gravity="center"
          android:clickable="true"
          android:onClick="logout"
          android:padding="@dimen/normal_padding"
          android:text="@string/logout"
          android:textColor="@color/main_text"
          android:textSize="@dimen/font_normal"/>

      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_below="@+id/logout"
          android:layout_marginLeft="@dimen/normal_margin"
          android:layout_marginRight="@dimen/normal_margin"
          android:background="#979797"/>

      <Button
          android:id="@+id/submit_btn"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentBottom="true"
          android:background="@drawable/submit_button_background"
          android:padding="@dimen/normal_padding"
          android:text="@string/start_check_in"
          android:textColor="@color/white"
          android:textSize="@dimen/font_normal"
          android:textStyle="bold"/>
    </RelativeLayout>
  </android.support.v7.widget.CardView>
</FrameLayout>