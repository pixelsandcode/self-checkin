<resources>

  <!-- Base application theme. -->
  <style name="Theme.Tipi" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:editTextColor">@color/main_text</item>
    <item name="android:textColorHint">@color/label_text</item>
    <item name="colorControlNormal">#979797</item>
    <item name="android:windowBackground">@color/white</item>
    <item name="colorControlActivated">@color/colorAccent</item>
  </style>

  <style name="hintText">
    <item name="android:textColor">#979797</item>
  </style>

  <style name="Theme.Tipi.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

  <style name="Theme.Tipi.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
