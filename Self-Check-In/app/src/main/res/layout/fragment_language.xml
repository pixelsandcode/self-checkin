<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/fragmnet_language"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.tipi.self_check_in.ui.fragments.LanguageFragment">

  <ImageView
      android:id="@+id/backBtn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_margin="@dimen/first_key_line"
      android:background="?android:attr/selectableItemBackground"
      android:clickable="true"
      android:padding="@dimen/first_key_line"
      android:src="@drawable/ic_arrow_back_pink_24dp"
      android:visibility="gone"/>

  <TextView
      android:id="@+id/title"
      android:layout_width="343dp"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="40dp"
      android:fontFamily="@string/roboto_light"
      android:gravity="center"
      android:text="@string/select_language"
      android:textColor="@color/main_text"
      android:textSize="@dimen/font_xx_large"/>

  <Button
      android:id="@+id/english_btn"
      android:layout_width="match_parent"
      android:layout_height="72dp"
      android:layout_marginBottom="@dimen/second_key_line"
      android:layout_marginLeft="159dp"
      android:layout_marginRight="159dp"
      android:layout_marginTop="251dp"
      android:background="@drawable/next_button_bg"
      android:fontFamily="@string/roboto_light"
      android:padding="@dimen/normal_padding"
      android:text="@string/english"
      android:textColor="@color/colorAccent"
      android:textSize="@dimen/font_large"/>

  <Button
      android:id="@+id/french_btn"
      android:layout_width="match_parent"
      android:layout_height="72dp"
      android:layout_below="@+id/english_btn"
      android:layout_marginBottom="@dimen/second_key_line"
      android:layout_marginLeft="159dp"
      android:layout_marginRight="159dp"
      android:layout_marginTop="40dp"
      android:background="@drawable/next_button_bg"
      android:fontFamily="@string/roboto_light"
      android:padding="@dimen/normal_padding"
      android:text="@string/french"
      android:textColor="@color/colorAccent"
      android:textSize="@dimen/font_large"/>

  <Button
      android:id="@+id/german_btn"
      android:layout_width="match_parent"
      android:layout_height="72dp"
      android:layout_below="@+id/french_btn"
      android:layout_marginBottom="@dimen/second_key_line"
      android:layout_marginLeft="159dp"
      android:layout_marginRight="159dp"
      android:layout_marginTop="40dp"
      android:background="@drawable/next_button_bg"
      android:fontFamily="@string/roboto_light"
      android:padding="@dimen/normal_padding"
      android:text="@string/german"
      android:textColor="@color/colorAccent"
      android:textSize="@dimen/font_large"/>

  <Button
      android:id="@+id/spanish_btn"
      android:layout_width="match_parent"
      android:layout_height="72dp"
      android:layout_below="@+id/german_btn"
      android:layout_marginBottom="@dimen/second_key_line"
      android:layout_marginLeft="159dp"
      android:layout_marginRight="159dp"
      android:layout_marginTop="40dp"
      android:background="@drawable/next_button_bg"
      android:fontFamily="@string/roboto_light"
      android:padding="@dimen/normal_padding"
      android:text="@string/spanish"
      android:textColor="@color/colorAccent"
      android:textSize="@dimen/font_large"/>

  <Button
      android:id="@+id/japanese_btn"
      android:layout_width="match_parent"
      android:layout_height="72dp"
      android:layout_below="@+id/spanish_btn"
      android:layout_marginBottom="@dimen/second_key_line"
      android:layout_marginLeft="159dp"
      android:layout_marginRight="159dp"
      android:layout_marginTop="40dp"
      android:background="@drawable/next_button_bg"
      android:fontFamily="@string/roboto_light"
      android:padding="@dimen/normal_padding"
      android:text="@string/japanese"
      android:textColor="@color/colorAccent"
      android:textSize="@dimen/font_large"/>

  <Button
      android:id="@+id/korean_btn"
      android:layout_width="match_parent"
      android:layout_height="72dp"
      android:layout_below="@+id/japanese_btn"
      android:layout_marginBottom="@dimen/second_key_line"
      android:layout_marginLeft="159dp"
      android:layout_marginRight="159dp"
      android:layout_marginTop="40dp"
      android:background="@drawable/next_button_bg"
      android:fontFamily="@string/roboto_light"
      android:padding="@dimen/normal_padding"
      android:text="@string/korean"
      android:textColor="@color/colorAccent"
      android:textSize="@dimen/font_large"/>

</RelativeLayout>
